<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lab04.pdsd.systems.cs.pub.ro.contactsmanager.ContactsManagerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Additional Fields "
        android:id="@+id/button" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/gray"
        android:id="@+id/name" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="01235463684"
        android:textColor="@color/gray"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/number" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/number"
        android:textColor="@color/gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/email" />
    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@+id/email"
        android:textColor="@color/gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/adress" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save "
        android:id="@+id/save"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/adress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel "
        android:id="@+id/cancel"
        android:layout_below="@+id/adress"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />
    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Job title"
        android:textColor="@color/gray"
        android:layout_below="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/jobtitle"
        android:visibility="invisible" />
    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="im"
        android:textColor="@color/gray"
        android:layout_below="@+id/website"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/im"
        android:visibility="invisible" />/>

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="webside"
        android:textColor="@color/gray"
        android:layout_below="@+id/company"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/website"
        android:visibility="invisible" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="company"
        android:textColor="@color/gray"
        android:layout_below="@+id/jobtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/company"
        android:visibility="invisible" />



</RelativeLayout>
